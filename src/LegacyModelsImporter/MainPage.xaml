<UserControl x:Class="LegacyModelsImporter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="250" Background="Green">

    <Grid x:Name="LayoutRoot" Background="White">
        <HyperlinkButton x:Name="importModelsLink" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" Click="importModelsLink_Click">Download legacy models from version 1.0</HyperlinkButton>
        <TextBlock x:Name="errorMessage" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray" FontStyle="Italic">No legacy models found</TextBlock>
    </Grid>
</UserControl>
