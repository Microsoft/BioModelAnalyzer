<Controls:ChildWindow x:Class="BioCheck.Controls.BusyWindow"
    x:Name="busyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" xmlns:Controls1="clr-namespace:BioCheck.Controls" mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    Style="{StaticResource BusyWindowStyle}"                      
    Width="300" 
    Background="White"
    Height="200"
    >
    
        <Controls1:BusyIndicator 
            Height="Auto"
            Width="Auto"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0" 
            FontFamily="Verdana" Foreground="#FF58595B" FontSize="14"
            BusyContent="{Binding ElementName=busyWindow, Path=BusyText, FallbackValue='Loading model...'}" 
            Style="{StaticResource CustomBusyIndicatorStyle}" 
            IsBusy="True"
            IsCancellable="{Binding ElementName=busyWindow, Path=IsCancellable}" 
            CancelCommand="{Binding ElementName=busyWindow, Path=CancelCommand}" 
            />
    
</Controls:ChildWindow>
